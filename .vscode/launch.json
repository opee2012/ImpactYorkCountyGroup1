    "version": "0.2.0",
    //Yes, you can actually change both ports
    "compounds": [
        {
            //Run server, then client
            "name": "Run Server & Client",
            "configurations": ["Run Server", "Run Client"]
        }
    ],
    "configurations": [
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Run Server",
            "command": "npm start",
            "cwd": "${workspaceFolder}\\server",
            "env": {
                "PORT": "3000"
            }
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Run Client",
            "command": "npm start",
            "cwd": "${workspaceFolder}\\client",
            "env": {
                "PORT": "3000"
            }
        }
    ]
}